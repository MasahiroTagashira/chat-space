.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group グループ名
      %ul.main-header__left-box__member-list
        Member:
        %li.main-header__left-box__member-list__member
          テスト

    = link_to "#" do
      %p.main-header__edit-btn Edit

  .messages
    .message
      .message__info
        %p.message__info--speaker
          speaker
        %p.message__info--date
          yyyy/mm/dd(www) hh:mm:ss
      %p.message__text message

      .message__info
        %p.message__info--speaker
          speaker2
        %p.message__info--date
          yyyy/mm/dd(www) hh:mm:ss
      %p.message__text message2

      .message__info
        %p.message__info--speaker
          speaker3
        %p.message__info--date
          yyyy/mm/dd(www) hh:mm:ss
      %p.message__text message3

  .form
    %form.new_message
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "type a message"}
        %label{class: "input-box__image"}
          = icon('fas', 'image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", class:"submit-btn", value: "Send" }

